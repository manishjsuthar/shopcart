<div class="article">
<div style="display:none;" id="myAlert">
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong>Hello Customer!</strong> Please add some item to go to checkout.
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
</div>

<div class="card my-5">
    {{# if products }}
        <div class="row">

            <div class="col-md-12 col-lg-8 cart">

                <div class="row">
                    <div class="col">
                        <h2 class="title"><i class="fas fa-shopping-cart"></i> Shopping Cart </h2>
                    </div>
                </div>
                <div>
                    <p><a href="/shopping-cart" class="text-decoration-none">Cart</a><i class="fas fa-caret-right"></i><a>Shipping</a> <i class="fas fa-caret-right"></i><a>Payment</a></p>
                </div>
                {{# each products }}
                <div class="row border-top border-bottom">
                    <div class="row main align-items-center">
                        <div class="col-2"><img class="img-fluid" src=/images/{{this.item.imagePath}}></div>

                        <div class="col">
                            <div class="row text-muted">Accessories</div>
                            <div class="row">{{ this.item.title }}</div>
                        </div>

                        

                        <div class="col">Qty: {{ this.qty }} </div>
                        <div class="col"><span>&#8377; {{ this.price }}</span>
                           
                        </div>
                        
                        <div class="col"><a href="/addByOne/{{this.item._id}}"><i class="fas fa-plus"></i></a><a href="/reduce/{{this.item._id}}"><i class="fas fa-minus"></i></a></div>
                    </div>
                </div>
                {{/each}}
                <div class="back-to-shop mt-1"><a href="/spare" class="text-decoration-none"><i class="fas fa-hand-point-left"></i> Back to shop</a>
                </div>
            </div>

            <div class="col-md-12 col-lg-4 summary">
                <div>
                    <h5><b>Summary</b></h5>
                </div>
                <hr>
                <div class="row">
                    <div class="col text-muted" style="padding-left:20px;"><u>Item</u></div>

                    <div class="col text-muted" style="padding-left:50px;"><u>Total Price</u></div>
                </div>


                <div class="row">
                    <div class="col" style="padding-left:20px;">{{ totalQty}}</div>

                    <div class="col" style="padding-left:60px;"><span>&#8377;</span>{{ totalPrice }}</div>
                </div>

                   <div class="row">
                    <div class="col" style="padding-left:20px;">Shipping</div>
                    <div class="col" style="padding-left:60px;"><span>&#8377;</span>{{shippingprice}}</div>
                </div>


                <form>
                    <p>SHIPPING</p> <select>
                        <option class="text-muted">Standard-Delivery- <span>&#8377;</span> 60</option>
                        
                    </select>
                    <p>GIVE CODE</p> <input id="code" placeholder="Enter your code">
                </form>


                <div class="row" style="border-top: 1px solid rgba(0,0,0,.1); padding: 2vh 0;">
                    <div class="col">TOTAL(PRICE+SHIPPING): <span>&#8377;</span>{{ totalsp }} </div>
                    <div class="col text-right"></div>
                </div> <a href="/checkout" class="text-decoration-none"> <button class="btn btn-outline-dark">Go for Payment  <i class="fas fa-credit-card"></i></button></a>
            </div>
        </div>
    {{ else }}
        <div class="row">
            <div class="col-md-12 col-lg-8 cart">
                <div>
                    <h2 class="title"><i class="fas fa-shopping-cart"></i> Shopping Cart </h2> 
                </div>
                 <div class="row border-top ">
                     <h4 class="text-center my-5">No Items in Cart</h4>
                 </div>
                <div class="back-to-shop "><a href="/spare" class="text-decoration-none"><i class="fas fa-hand-point-left"></i> Back to shop</a>
                </div>
            </div>

            <div class="col-md-12 col-lg-4 summary">
                <div>
                    <h5><b>Summary</b></h5>
                </div>
                <hr>
                <div class="row">
                    <div class="col text-muted" style="padding-left:20px;">Item</div>

                    <div class="col text-muted" style="padding-left:50px;">Total Price</div>
                </div>


                <div class="row">
                    <div class="col" style="padding-left:20px;">{{ session.cart.totalQty}}</div>

                    <div class="col" style="padding-left:60px;"><span>&#8377;</span>{{ totalPrice }}</div>
                </div>
                 <div class="row">
                    <div class="col" style="padding-left:20px;">Shipping</div>
                    <div class="col" style="padding-left:60px;"><span>&#8377;</span>{{shippingprice}}</div>
                </div>


                <form>
                    <p>SHIPPING</p> <select>
                        <option class="text-muted">Standard-Delivery- <span>&#8377;</span> 60</option>
                    </select>
                    <p>GIVE CODE</p> <input id="code" placeholder="Enter your code">
                </form>


                <div class="row" style="border-top: 1px solid rgba(0,0,0,.1); padding: 2vh 0;">
                    <div class="col">TOTAL(PRICE+SHIPPING) <span>&#8377;</span>{{ totalPrice}}</div>
                    <div class="col text-right"></div>
                </div>
                <button class="btn btn-outline-dark" value="showAlert" onclick="showAlert();" >Go for Payment <i class="fas fa-credit-card"></i> </button>
            </div>
        </div>
    {{/if}}
</div>
</div>
<script>
function showAlert(){
  if($("#myAlert").find("div#myAlert2").length==0){
    $("#myAlert");
  }
  $("#myAlert").css("display", "");
}
</script>

