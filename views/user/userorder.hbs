
<div class="content">
    <div class="row my-3">
        <div class="col col-lg-10">
            <h2>User Profile</h2>
<h3>Items in Cart</h3>
{{# if products }}
  <div class="row">
    <div class="col-sm-6 col-md-6 col-sm-offset-3 col-md-offset-3">
      <ul class="list-group">
        {{# each products }}
          <li class="list-group-item">
            <strong>{{ this.item.title }}</strong>
            <span class="label label-success">Rs {{ this.price }}</span>
            <span>Qty: {{ this.qty }}</span>
          </li>
        {{/each}}
      </ul>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-6 col-md-6 col-sm-offset-3 col-md-offset-3">
      <strong>Total: Rs {{ totalPrice }}</strong>
    </div>
  </div>

  <hr>

{{ else }}
  <div class="row">
    <div class="col-sm-6 col-md-6 col-sm-offset-3 col-md-offset-3">
      <h2>No items found in the Cart</h2>
    </div>
  </div>
{{/if}}
        </div>
    </div>
</div>

